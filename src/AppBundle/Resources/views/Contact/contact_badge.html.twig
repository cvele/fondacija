<div class="row">
    <div class="col-lg-5">
        <div class="media">
            <a class="pull-left" href="{{ path("contact_show", {"id": contact.id }) }}">
                <img class="media-object dp image-responsive" src="{{ gravatar(contact.businessEmail) }}" style="width:40px;height:40px;">
            </a>
            <div class="media-body">
                <h4 class="media-heading">
                <a href="{{ path("contact_show", {"id": contact.id }) }}" style="color:rgb(85, 85, 85)!important;">{{ contact.lastname }}, {{ contact.firstname }}</a> <a href="{{ path("company_show", {"id": contact.company.id }) }}" style="color:rgb(170, 170, 170)!important;"><small>{{ contact.company }}</small></h4></a>
                <h5>Personal E-Mail: {{ contact.personalEmail }}; Created: {{ contact.createdAt|date("d.m.Y") }}; </h5>
            </div>
        </div>
        <hr />
    </div>
</div>